{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true, // Garante que não haja 'any' implícito
    "jsx": "react-native", // Essencial para arquivos .tsx
    "lib": ["DOM", "ES2022"],
    "moduleResolution": "bundler" // Mantenha o 'bundler' que corrigimos
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/react-native-action-sheet.d.ts"]
}
